@model DentApp.Application.ViewModels.ActionEmployeeViewModel
<md-toolbar class="md-default" layout="row">
    <div class="md-toolbar-tools">
        <h2 class="md-flex">Funcionário</h2>
    </div>
    <md-button layout-align="end center" ng-click="closeDialog()" class="md-icon-button">
        <md-icon class="material-icons">close</md-icon>
    </md-button>
</md-toolbar>
<md-content layout-gt-sm="row" layout-padding>    
        <md-input-container class="md-block" flex-gt-xs>
            <label asp-for="EmployeeBag.Name"></label>
            <input asp-for="EmployeeBag.Name" required ng-model="EmployeeBag.Name">
        </md-input-container>    
</md-content>
<md-content layout-padding>
    <div>
        <form name="employeeForm">
            <div layout-gt-xs="row">
                <md-input-container class="md-block" flex-gt-xs>
                    <label asp-for="EmployeeBag.eMail"></label>
                    <input asp-for="EmployeeBag.eMail" required ng-model="EmployeeBag.Email" type="email">
                </md-input-container>
            </div>
            <div layout-gt-xs="column" class="md-primary md-hue-50">
                <md-input-container class="md-block" flex-gt-xs>
                    <label asp-for="EmployeeBag.Login.UserName"></label>
                    <input asp-for="EmployeeBag.Login.UserName" required ng-model="EmployeeBag.Login.UserName" name="employeUser" autocomplete="off">
                </md-input-container>
                <md-input-container class="md-block" flex-gt-xs>
                    <label asp-for="EmployeeBag.Login.Password"></label>
                    <input asp-for="EmployeeBag.Login.Password" required ng-model="EmployeeBag.Login.Password" name="employePass" autocomplete="off" type="password">
                </md-input-container>
            </div>            
            <div layout-gt-sm="row">
                <md-input-container class="md-block" flex-gt-sm>
                    <label>Telefone</label>
                    <input ng-model="phone.Number" ng-pattern="/^[(][0-9]{2}[)] [0-9]{5}-[0-9]{4}$/">
                    <div class="hint" ng-show="showHints">(##) #####-####</div>
                    <div ng-messages="phone.Number.$error" ng-hide="showHints">
                        <div ng-message="pattern">(##) #####-#### - informe um telefone válido.</div>
                    </div>
                </md-input-container>
                <md-button layout-align="end end" ng-click="addPhone()" class="md-icon-button" ng-disabled="isPhoneNumberValid()">
                    <md-icon class="material-icons">add_circle_outline</md-icon>
                </md-button>
            </div>
            <md-input-container class="md-block">
                <label>Address</label>
                <input ng-model="user.address">
            </md-input-container>
            <md-input-container md-no-float class="md-block">
                <input ng-model="user.address2" placeholder="Address 2">
            </md-input-container>
            <div layout-gt-sm="row">
                <md-input-container class="md-block" flex-gt-sm>
                    <label>City</label>
                    <input ng-model="user.city">
                </md-input-container>
                <md-input-container class="md-block" flex-gt-sm>
                    <label>State</label>
                    <md-select ng-model="user.state">
                        <md-option ng-repeat="state in states" value="{{state.abbrev}}">
                            {{state.abbrev}}
                        </md-option>
                    </md-select>
                </md-input-container>
                <md-input-container class="md-block" flex-gt-sm>
                    <label>Postal Code</label>
                    <input name="postalCode" ng-model="user.postalCode" placeholder="12345"
                           required ng-pattern="/^[0-9]{5}$/" md-maxlength="5">
                    <div ng-messages="userForm.postalCode.$error" role="alert" multiple>
                        <div ng-message="required" class="my-message">You must supply a postal code.</div>
                        <div ng-message="pattern" class="my-message">
                            That doesn't look like a valid postal
                            code.
                        </div>
                        <div ng-message="md-maxlength" class="my-message">
                            Don't use the long version silly...we don't need to be that specific...
                        </div>
                    </div>
                </md-input-container>
            </div>
            <md-input-container class="md-block">
                <label>Biography</label>
                <textarea ng-model="user.biography" md-maxlength="150" rows="5" md-select-on-focus></textarea>
            </md-input-container>
        </form>
    </div>
</md-content>