<div ng-app="DentApp" layout="column" ng-controller="homeCtrl">
    <md-toolbar class="md-medium-tall">
        <div layout="column" class="md-toolbar-tools-bottom inset">
            <h2 show-gt-md>D</h2>
        </div>
    </md-toolbar>
    <div layout="column">
        <md-sidenav class="md-sidenav-left"
                    md-component-id="left"
                    md-is-locked-open="$mdMedia('gt-md')"
                    md-whiteframe="2">
            <md-content flex role="navigation">
                <ul class="docs-menu">
                    <li class="parent-list-item">
                        <h2 class="menu-heading md-subhead">
                            User
                        </h2>
                        <menu-link section="section"></menu-link>
                        <ul class="menu-nested-list">
                            <li>
                                <menu-link section="child" ui-sref="UserCreate">Create</menu-link>
                            </li>
                        </ul>
                    </li>
                </ul>
            </md-content>
        </md-sidenav>
        <md-content flex md-scroll-y>
            <ui-view layout="column" layout-padding></ui-view>
        </md-content>
    </div>
    <md-fab-speed-dial md-direction="up" md-open="ctrl.isOpen" class="md-scale md-fab-bottom-right" ng-class="{ 'md-hover-full': true }">
        <md-fab-trigger>
            <md-button aria-label="menu" class="md-fab md-primary">
                <md-tooltip md-direction="left">Acesso Rápido</md-tooltip>
                <md-icon class="material-icons">menu</md-icon>
            </md-button>
        </md-fab-trigger>
        <md-fab-actions>
            <md-button aria-label="Agenda" class="md-fab md-raised md-mini">
                <md-tooltip md-direction="left">
                    Agenda
                </md-tooltip>
                <i>+</i>
            </md-button>
            <md-button aria-label="Estoque" class="md-fab md-raised md-mini">
                <md-tooltip md-direction="left">
                    Estoque
                </md-tooltip>
                <i>+</i>
            </md-button>
            <md-button aria-label="Finanças" class="md-fab md-raised md-mini">
                <md-tooltip md-direction="left">
                    Finanças
                </md-tooltip>
                <i>+</i>
            </md-button>
        </md-fab-actions>
    </md-fab-speed-dial>
</div>
@section scripts {
    <environment names="Development">                
        <script src="~/js/controllers/homeController.js" asp-append-version="true"></script>
        <script src="~/js/controllers/User/userCreateController.js" asp-append-version="true"></script>       
        <script src="~/js/app.js" asp-append-version="true"></script> 
    </environment>
    <environment names="Staging,Production">                
        <script src="~/js/controllers/controllers.min.js" asp-append-version="true"></script>
        <script src="~/js/controllers/User/userCtrl.min.js" asp-append-version="true"></script>
        <script src="~/js/app.min.js" asp-append-version="true"></script>
    </environment>
}
